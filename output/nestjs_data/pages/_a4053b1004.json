  "code_samples": [
    {
      "code": "const app = await NestFactory.create(AppModule);\nconst httpAdapter = app.getHttpAdapter();",
      "language": "typescript"
    },
    {
      "code": "export class CatsService {\n  constructor(private adapterHost: HttpAdapterHost) {}\n}",
      "language": "typescript"
    },
    {
      "code": "@Dependencies(HttpAdapterHost)\nexport class CatsService {\n  constructor(adapterHost) {\n    this.adapterHost = adapterHost;\n  }\n}",
      "language": "typescript"
    },
    {
      "code": "const adapterHost = app.get(HttpAdapterHost);\nconst httpAdapter = adapterHost.httpAdapter;",
      "language": "typescript"
    },
    {
      "code": "const instance = httpAdapter.getInstance();",
      "language": "typescript"
    },
    {
      "code": "this.httpAdapterHost.listen$.subscribe(() =>\n  console.log('HTTP server is listening'),\n);",
      "language": "typescript"
    },
    {
      "code": "if (this.httpAdapterHost.listening) {\n  console.log('HTTP server is listening');\n}",
      "language": "typescript"
    }
