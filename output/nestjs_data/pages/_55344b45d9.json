  "code_samples": [
    {
      "code": "@Sse('sse')\nsse(): Observable<MessageEvent> {\n  return interval(1000).pipe(map((_) => ({ data: { hello: 'world' } })));\n}",
      "language": "typescript"
    },
    {
      "code": "export interface MessageEvent {\n  data: string | object;\n  id?: string;\n  type?: string;\n  retry?: number;\n}",
      "language": "typescript"
    },
    {
      "code": "const eventSource = new EventSource('/sse');\neventSource.onmessage = ({ data }) => {\n  console.log('New message', JSON.parse(data));\n};",
      "language": "javascript"
    }
  ],
