  "code_samples": [
    {
      "code": "import { FieldMiddleware, MiddlewareContext, NextFn } from '@nestjs/graphql';\n\nconst loggerMiddleware: FieldMiddleware = async (\n  ctx: MiddlewareContext,\n  next: NextFn,\n) => {\n  const value = await next();\n  console.log(value);\n  return value;\n};",
      "language": "typescript"
    },
    {
      "code": "@ObjectType()\nexport class Recipe {\n  @Field({ middleware: [loggerMiddleware] })\n  title: string;\n}",
      "language": "typescript"
    },
    {
      "code": "const value = await next();\nreturn value?.toUpperCase();",
      "language": "typescript"
    },
    {
      "code": "@ResolveField(() => String, { middleware: [loggerMiddleware] })\ntitle() {\n  return 'Placeholder';\n}",
      "language": "typescript"
    },
    {
      "code": "GraphQLModule.forRoot({\n  autoSchemaFile: 'schema.gql',\n  buildSchemaOptions: {\n    fieldMiddleware: [loggerMiddleware],\n  },\n}),",
      "language": "typescript"
    }
  ],
